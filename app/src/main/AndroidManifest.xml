                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.echeung.cdflabs.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:icon="@drawable/ic_launcher"
            android:parentActivityName="me.echeung.cdflabs.activities.MainActivity" >
        </activity>
        <activity
            android:name="me.echeung.cdflabs.activities.MapActivity"
